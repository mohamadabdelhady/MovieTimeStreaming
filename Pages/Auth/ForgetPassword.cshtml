@page
@model MovieTimeStreaming.Pages.Auth.ForgetPasswordModel
@{
    Layout = "Shared/_Layout_Auth";
    ViewData["Title"] = "Forgot Password";
}
<div class="my-form card ms-auto me-auto">

    <form id="registerForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-2">
            <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="email" aria-required="true">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group mt-2 mb-2" align="center">
            <button type="submit" class="btn my-btn" style="width: 200px">Reset Password</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}